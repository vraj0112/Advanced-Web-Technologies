<div class="row mt-3">
    <div class="col-md-2">
        <label for="username" class="form-label" style="font-size:x-large">Username: </label>
    </div>
    <div class="col-md-2">
        <input class="form-control" type="text" name="username" value="{{username}}">
    </div>
    <div class="row mt-3">
        <div class="col-md-2">
            <label for="password" class="form-label" style="font-size:x-large">Password: </label>
        </div>
        <div class="col-md-2">
            <input class="form-control" type="password" name="password" value="{{password}}">
        </div>
    </div>

    <div class="col-md-2 mt-3">
        <button type="submit" class="btn btn-primary mb-3">{{signin}}</button>
    </div>
</div>
